# PostgreSQL Configuration
# Copy file ini menjadi .env.local dan sesuaikan dengan setting lokal Anda

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pertemuan6_user
DB_PASSWORD=your_secure_password
DB_NAME=pertemuan6

# Full Database URL (format: postgresql://user:password@host:port/dbname)
DATABASE_URL=postgresql://pertemuan6_user:your_secure_password@localhost:5432/pertemuan6

# Alternative: Menggunakan user postgres default
# DATABASE_URL=postgresql://postgres:postgres_password@localhost:5432/pertemuan6

# Application Settings
PYRAMID_RELOAD_TEMPLATES=true
PYRAMID_DEBUG_AUTHORIZATION=false
PYRAMID_DEBUG_NOTFOUND=false
PYRAMID_DEBUG_ROUTEMATCH=false
PYRAMID_DEFAULT_LOCALE_NAME=en

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=6543

# Logging
LOG_LEVEL=DEBUG
